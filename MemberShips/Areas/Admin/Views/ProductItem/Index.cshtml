@model IEnumerable<MemberShipsPro.Areas.Admin.Models.ProductItemModel>
@using MemberShipsPro.Areas.Admin.Models;
@{
    ViewBag.Title = "Index";
}

<h2>Product Items</h2>

<p>
    @Html.Partial("_CreateButtonPartial")
</p>
<table class="table table-striped table-condensed">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.ItemTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductTitle)
        </th>
        <th>
            </th>
</tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemTitle)  
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductTitle)
            </td>
           @Html.Partial("_TableButtonsPartial",
            new SmallButtonModel { ItemId = item.ItemId,ProductId = item.ProductId })
        </tr>
    }

</table>
