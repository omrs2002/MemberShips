@model IEnumerable<MemberShipsPro.Entities.ItemType>
@using MemberShipsPro.Areas.Admin.Models;

@{
    ViewBag.Title = "Item Types";
}

<h2>Item Types</h2>

<p>
    @Html.Partial("_CreateButtonPartial")
</p>
<table class="table table-striped table-condensed">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        @Html.Partial("_TableButtonsPartial",
            new SmallButtonModel { Id = item.Id })
    </tr>
}

</table>
